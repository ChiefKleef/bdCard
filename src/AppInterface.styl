.appInterface {
  width: 100%;
  height: 100%;
  transition: background-color 1s linear;
  .gif-container {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    display: flex;
    justify-content: center;
    align-items: center;
    background:none;
    z-index: 0;
    img {
      max-width: 50%;
      max-height: 50%;
      
    }
  }
  .repeatingText {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0px;
    left: 0px;
    background-image: url("http://i.imgur.com/vxtrm7S.png");
    background-repeat: repeat-y;
    background-size: 90%;
    background-position: center -1500px;
    animation: movebg 120s linear infinite;
    z-index: 10;
  }
  @keyframes movebg {
    0% {
      background-position: center -1500px;
    }
    100% {
      background-position: center 0px;
    }
  }
}
.appInterface-colorIndex-1 {
  background-color: #F9BDD6;
}
.appInterface-colorIndex-2 {
  background-color: #D6ADFC;
}
.appInterface-colorIndex-3 {
  background-color: #A1C5E5;
}
.appInterface-colorIndex-4 {
  background-color: #E58EEC;
}
